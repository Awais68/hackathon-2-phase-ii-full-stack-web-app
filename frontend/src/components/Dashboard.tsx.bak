'use client'

import { useState, useEffect } from 'react'
import { motion, AnimatePresence } from 'framer-motion'
import { useRouter } from 'next/navigation'
import {
  Search,
  Filter,
  Plus,
  Mic,
  LogOut,
  ChevronRight,
  Target,
  CheckCircle2,
  Clock,
  Zap,
  Flame,
  RefreshCw,
  AlertTriangle,
  TrendingUp,
  Calendar,
  MoreVertical,
  Edit2,
  Trash2,
  Volume2
} from 'lucide-react'
import { ParticlesBackground } from './ParticlesBackground'
import { StatusChart } from './StatusChart'
import { VoiceCommandButton } from './VoiceCommandButton'

// Mission Tab Types
type MissionTab = 'all' | 'active' | 'completed' | 'starting' | 'done' | 'impossible' | 'high-priority' | 'lazy' | 'recursion'

interface Mission {
  id: string
  name: string
  priority: 'critical' | 'high' | 'normal' | 'low'
  status: 'pending' | 'in-progress' | 'completed' | 'archived'
  recursion: 'none' | 'daily' | 'weekly' | 'monthly'
  time: string
  createdAt: Date
}

const missionTabs: { id: MissionTab; label: string; icon: typeof Target; color: string }[] = [
  { id: 'all', label: 'All Missions', icon: Target, color: 'text-primary' },
  { id: 'active', label: 'Active', icon: Zap, color: 'text-success' },
  { id: 'completed', label: 'Completed', icon: CheckCircle2, color: 'text-muted-foreground' },
  { id: 'starting', label: 'Starting', icon: Clock, color: 'text-warning' },
  { id: 'done', label: 'Mission Done', icon: TrendingUp, color: 'text-success' },
  { id: 'impossible', label: 'Mission Impossible', icon: AlertTriangle, color: 'text-accent' },
  { id: 'high-priority', label: 'High Priority', icon: Flame, color: 'text-warning' },
  { id: 'lazy', label: 'Mission Lazy', icon: RefreshCw, color: 'text-muted-foreground' },
  { id: 'recursion', label: 'Mission Recursion', icon: RefreshCw, color: 'text-primary' },
]

// Mock data
const mockMissions: Mission[] = [
  { id: '1', name: 'Complete system architecture documentation', priority: 'high', status: 'in-progress', recursion: 'none', time: '2h ago', createdAt: new Date() },
  { id: '2', name: 'Deploy backend to Render', priority: 'critical', status: 'completed', recursion: 'none', time: '1d ago', createdAt: new Date(Date.now() - 86400000) },
  { id: '3', name: 'Review pull requests', priority: 'normal', status: 'pending', recursion: 'daily', time: '3h ago', createdAt: new Date() },
  { id: '4', name: 'Optimize database queries', priority: 'high', status: 'in-progress', recursion: 'none', time: '5h ago', createdAt: new Date() },
  { id: '5', name: 'Update documentation', priority: 'low', status: 'pending', recursion: 'weekly', time: '1w ago', createdAt: new Date(Date.now() - 604800000) },
  { id: '6', name: 'Security audit', priority: 'critical', status: 'pending', recursion: 'none', time: '30m ago', createdAt: new Date() },
  { id: '7', name: 'Code refactoring', priority: 'normal', status: 'archived', recursion: 'none', time: '2d ago', createdAt: new Date(Date.now() - 172800000) },
]

export function Dashboard() {
  const router = useRouter()
  const [activeTab, setActiveTab] = useState<MissionTab>('all')
  const [searchQuery, setSearchQuery] = useState('')
  const [missions, setMissions] = useState<Mission[]>(mockMissions)
  const [isLoading, setIsLoading] = useState(true)
  const [showVoice, setShowVoice] = useState(false)
  const [showAddModal, setShowAddModal] = useState(false)

  // Loading state
  useEffect(() => {
    const timer = setTimeout(() => setIsLoading(false), 1500)
    return () => clearTimeout(timer)
  }, [])

  // Filter missions based on search and tab
  const filteredMissions = missions.filter((mission) => {
    const matchesSearch = mission.name.toLowerCase().includes(searchQuery.toLowerCase())

    if (!matchesSearch) return false

    switch (activeTab) {
      case 'active':
        return mission.status === 'in-progress' || mission.status === 'pending'
      case 'completed':
        return mission.status === 'completed'
      case 'starting':
        return mission.status === 'pending'
      case 'done':
        return mission.status === 'archived'
      case 'impossible':
        return mission.priority === 'critical'
      case 'high-priority':
        return mission.priority === 'high'
      case 'lazy':
        return mission.recursion !== 'none'
      case 'recursion':
        return mission.recursion !== 'none'
      default:
        return true
    }
  })

  // Stats
  const stats = {
    total: missions.length,
    active: missions.filter(m => m.status === 'in-progress').length,
    completed: missions.filter(m => m.status === 'completed').length,
    critical: missions.filter(m => m.priority === 'critical').length,
  }

  const handleAbortMission = () => {
    if (confirm('Abort mission? This will log you out.')) {
      router.push('/auth')
    }
  }

  if (isLoading) {
    return <LoadingScreen />
  }

  return (
    <div className="min-h-screen bg-background relative overflow-hidden">
      <ParticlesBackground />

      {/* Navbar */}
      <DashboardNavbar onLogout={handleAbortMission} />

      <div className="pt-16 flex">
        {/* Sidebar */}
        <aside className="fixed left-0 top-16 bottom-0 w-64 bg-card/50 backdrop-blur border-r border-primary/20 overflow-y-auto">
          <div className="p-4 space-y-2">
            {missionTabs.map((tab) => (
              <button
                key={tab.id}
                onClick={() => setActiveTab(tab.id)}
                className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-200 group ${
                  activeTab === tab.id
                    ? 'mission-tab-active'
                    : 'hover:bg-secondary/50 text-muted-foreground hover:text-foreground'
                }`}
              >
                <tab.icon className={`h-5 w-5 ${activeTab === tab.id ? tab.color : ''}`} />
                <span className="font-mono text-sm">{tab.label}</span>
                {tab.id === 'impossible' && stats.critical > 0 && (
                  <span className="ml-auto px-2 py-0.5 rounded-full bg-accent/20 text-accent text-xs">
                    {stats.critical}
                  </span>
                )}
              </button>
            ))}

            {/* Abort Mission Button */}
            <div className="pt-4 mt-4 border-t border-primary/20">
              <button
                onClick={handleAbortMission}
                className="w-full flex items-center gap-3 px-4 py-3 rounded-lg text-destructive hover:bg-destructive/10 transition-colors"
              >
                <LogOut className="h-5 w-5" />
                <span className="font-mono text-sm">Abort Mission</span>
              </button>
            </div>
          </div>
        </aside>

        {/* Main Content */}
        <main className="ml-64 flex-1 p-6">
          {/* Stats Cards */}
          <div className="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <StatCard
              label="Total Missions"
              value={stats.total}
              icon={Target}
              color="text-primary"
            />
            <StatCard
              label="Active"
              value={stats.active}
              icon={Zap}
              color="text-success"
            />
            <StatCard
              label="Completed"
              value={stats.completed}
              icon={CheckCircle2}
              color="text-muted-foreground"
            />
            <StatCard
              label="Critical"
              value={stats.critical}
              icon={AlertTriangle}
              color="text-accent"
            />
          </div>

          {/* Chart & Search Bar */}
          <div className="grid lg:grid-cols-3 gap-6 mb-6">
            {/* Status Chart */}
            <div className="lg:col-span-1 bg-card/30 border border-primary/20 rounded-xl p-4">
              <h3 className="font-mono text-sm text-muted-foreground mb-4">Mission Status</h3>
              <StatusChart missions={missions} />
            </div>

            {/* Search & Filters */}
            <div className="lg:col-span-2 bg-card/30 border border-primary/20 rounded-xl p-4">
              <div className="flex flex-col sm:flex-row gap-4 mb-4">
                {/* Search */}
                <div className="relative flex-1">
                  <Search className="absolute left-3 top-1/2 -translate-y-1/2 h-4 w-4 text-muted-foreground" />
                  <input
                    type="text"
                    placeholder="Search missions..."
                    value={searchQuery}
                    onChange={(e) => setSearchQuery(e.target.value)}
                    className="input-terminal w-full pl-10"
                  />
                </div>

                {/* Filter Button */}
                <button className="btn-secondary flex items-center gap-2">
                  <Filter className="h-4 w-4" />
                  <span className="hidden sm:inline">Filter</span>
                </button>

                {/* Initilize Button */}
                <button
                  onClick={() => setShowAddModal(true)}
                  className="btn-primary flex items-center gap-2"
                >
                  <Plus className="h-4 w-4" />
                  <span>Initilize</span>
                </button>

                {/* Voice Command */}
                <VoiceCommandButton onCommand={(cmd) => console.log('Voice command:', cmd)} />
              </div>

              {/* Quick Stats */}
              <div className="flex flex-wrap gap-3">
                <span className="font-mono text-xs text-muted-foreground">
                  Showing {filteredMissions.length} of {missions.length} missions
                </span>
              </div>
            </div>
          </div>

          {/* Mission Grid */}
          <div className="grid gap-4">
            <AnimatePresence mode="popLayout">
              {filteredMissions.map((mission) => (
                <MissionCard key={mission.id} mission={mission} />
              ))}
            </AnimatePresence>

            {filteredMissions.length === 0 && (
              <div className="text-center py-12">
                <Target className="h-12 w-12 text-muted-foreground mx-auto mb-4" />
                <p className="font-mono text-muted-foreground">No missions found</p>
              </div>
            )}
          </div>
        </main>
      </div>

      {/* Add Mission Modal */}
      <AnimatePresence>
        {showAddModal && (
          <AddMissionModal onClose={() => setShowAddModal(false)} />
        )}
      </AnimatePresence>
    </div>
  )
}

// Loading Screen Component
function LoadingScreen() {
  return (
    <div className="min-h-screen bg-background flex items-center justify-center">
      <div className="text-center">
        <div className="w-16 h-16 border-4 border-primary/30 border-t-primary rounded-full animate-spin mx-auto mb-4" />
        <p className="font-mono text-primary text-lg animate-pulse">
          Initilizing Missions<span className="loading-dots"><span>.</span><span>.</span><span>.</span></span>
        </p>
      </div>
    </div>
  )
}

// Navbar Component
function DashboardNavbar({ onLogout }: { onLogout: () => void }) {
  return (
    <nav className="fixed top-0 left-0 right-0 z-50 bg-background/90 backdrop-blur-md border-b border-primary/20 h-16">
      <div className="h-full px-4 flex items-center justify-between">
        <div className="flex items-center gap-2">
          <div className="w-8 h-8 bg-primary/20 rounded-lg flex items-center justify-center">
            <span className="font-display font-bold text-primary">MI</span>
          </div>
          <span className="font-display font-bold hidden sm:block">MissionImpossible</span>
        </div>

        <div className="flex items-center gap-4">
          <VoiceCommandButton onCommand={(cmd) => console.log(cmd)} />

          <button
            onClick={onLogout}
            className="flex items-center gap-2 px-3 py-1.5 rounded-lg text-destructive hover:bg-destructive/10 transition-colors"
            title="Abort Mission"
          >
            <LogOut className="h-4 w-4" />
            <span className="hidden sm:inline font-mono text-sm">Abort Mission</span>
          </button>
        </div>
      </div>
    </nav>
  )
}

// Stat Card Component
function StatCard({ label, value, icon: Icon, color }: {
  label: string
  value: number
  icon: typeof Target
  color: string
}) {
  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      className="bg-card/30 border border-primary/20 rounded-xl p-4"
    >
      <div className="flex items-center justify-between mb-2">
        <Icon className={`h-5 w-5 ${color}`} />
        <span className="font-display text-2xl font-bold">{value}</span>
      </div>
      <p className="font-mono text-xs text-muted-foreground">{label}</p>
    </motion.div>
  )
}

// Mission Card Component
function MissionCard({ mission }: { mission: Mission }) {
  const priorityColors = {
    critical: 'priority-critical',
    high: 'priority-high',
    normal: 'priority-normal',
    low: 'priority-low',
  }

  const statusIcons = {
    pending: Clock,
    'in-progress': Zap,
    completed: CheckCircle2,
    archived: TrendingUp,
  }

  const StatusIcon = statusIcons[mission.status]

  return (
    <motion.div
      layout
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      exit={{ opacity: 0, y: -20 }}
      className={`bg-card/30 border rounded-xl p-4 task-card-shadow ${priorityColors[mission.priority]}`}
    >
      <div className="flex items-start gap-4">
        {/* Status Icon */}
        <div className={`p-2 rounded-lg ${
          mission.status === 'completed' ? 'bg-success/20' :
          mission.status === 'in-progress' ? 'bg-primary/20' : 'bg-secondary'
        }`}>
          <StatusIcon className={`h-5 w-5 ${
            mission.status === 'completed' ? 'text-success' :
            mission.status === 'in-progress' ? 'text-primary' : 'text-muted-foreground'
          }`} />
        </div>

        {/* Content */}
        <div className="flex-1 min-w-0">
          <div className="flex items-start justify-between gap-4">
            <div>
              <h4 className="font-mono font-medium truncate">{mission.name}</h4>
              <div className="flex items-center gap-3 mt-1">
                <span className={`text-xs px-2 py-0.5 rounded ${
                  mission.priority === 'critical' ? 'bg-accent/20 text-accent' :
                  mission.priority === 'high' ? 'bg-warning/20 text-warning' :
                  mission.priority === 'normal' ? 'bg-primary/20 text-primary' :
                  'bg-success/20 text-success'
                }`}>
                  {mission.priority}
                </span>
                {mission.recursion !== 'none' && (
                  <span className="text-xs text-muted-foreground flex items-center gap-1">
                    <RefreshCw className="h-3 w-3" />
                    {mission.recursion}
                  </span>
                )}
              </div>
            </div>

            {/* Actions */}
            <div className="flex items-center gap-2">
              <button className="p-2 hover:bg-secondary rounded-lg transition-colors" title="Edit">
                <Edit2 className="h-4 w-4 text-muted-foreground" />
              </button>
              <button className="p-2 hover:bg-destructive/20 rounded-lg transition-colors" title="Delete">
                <Trash2 className="h-4 w-4 text-destructive" />
              </button>
            </div>
          </div>

          {/* Footer */}
          <div className="flex items-center justify-between mt-3 pt-3 border-t border-primary/10">
            <span className="font-mono text-xs text-muted-foreground">
              {mission.time}
            </span>
            <div className="flex items-center gap-2">
              <button className="p-1.5 hover:bg-secondary rounded transition-colors">
                <MoreVertical className="h-4 w-4 text-muted-foreground" />
              </button>
            </div>
          </div>
        </div>
      </div>
    </motion.div>
  )
}

// Add Mission Modal
function AddMissionModal({ onClose }: { onClose: () => void }) {
  const [name, setName] = useState('')
  const [priority, setPriority] = useState<'critical' | 'high' | 'normal' | 'low'>('normal')
  const [recursion, setRecursion] = useState<'none' | 'daily' | 'weekly' | 'monthly'>('none')

  return (
    <motion.div
      initial={{ opacity: 0 }}
      animate={{ opacity: 1 }}
      exit={{ opacity: 0 }}
      className="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/50 backdrop-blur-sm"
      onClick={onClose}
    >
      <motion.div
        initial={{ scale: 0.95, opacity: 0 }}
        animate={{ scale: 1, opacity: 1 }}
        exit={{ scale: 0.95, opacity: 0 }}
        className="w-full max-w-md bg-card border border-primary/30 rounded-xl p-6"
        onClick={(e) => e.stopPropagation()}
      >
        <h2 className="font-display text-xl font-bold mb-6 flex items-center gap-2">
          <Plus className="h-5 w-5 text-primary" />
          Initilize Mission
        </h2>

        <form onSubmit={(e) => { e.preventDefault(); onClose() }} className="space-y-4">
          <div>
            <label className="block font-mono text-sm text-muted-foreground mb-2">
              Mission Name
            </label>
            <input
              type="text"
              value={name}
              onChange={(e) => setName(e.target.value)}
              placeholder="Enter mission name..."
              className="input-terminal w-full"
              autoFocus
            />
          </div>

          <div>
            <label className="block font-mono text-sm text-muted-foreground mb-2">
              Priority Level
            </label>
            <div className="grid grid-cols-4 gap-2">
              {(['low', 'normal', 'high', 'critical'] as const).map((p) => (
                <button
                  key={p}
                  type="button"
                  onClick={() => setPriority(p)}
                  className={`py-2 px-3 rounded-lg font-mono text-sm transition-all ${
                    priority === p
                      ? p === 'critical' ? 'bg-accent text-white' :
                        p === 'high' ? 'bg-warning text-black' :
                        p === 'normal' ? 'bg-primary text-black' :
                        'bg-success text-black'
                      : 'bg-secondary text-muted-foreground hover:text-foreground'
                  }`}
                >
                  {p.charAt(0).toUpperCase() + p.slice(1)}
                </button>
              ))}
            </div>
          </div>

          <div>
            <label className="block font-mono text-sm text-muted-foreground mb-2">
              Recursion Pattern
            </label>
            <select
              value={recursion}
              onChange={(e) => setRecursion(e.target.value as typeof recursion)}
              className="input-terminal w-full"
            >
              <option value="none">No Recursion</option>
              <option value="daily">Daily</option>
              <option value="weekly">Weekly</option>
              <option value="monthly">Monthly</option>
            </select>
          </div>

          <div className="flex gap-3 pt-4">
            <button type="button" onClick={onClose} className="btn-secondary flex-1">
              Cancel
            </button>
            <button type="submit" className="btn-primary flex-1">
              Initilize
            </button>
          </div>
        </form>
      </motion.div>
    </motion.div>
  )
}
