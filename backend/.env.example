# ============================================
# Backend Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# Do NOT commit .env to version control
# ============================================

# Application Configuration
APP_NAME="Todo Evolution API"
APP_VERSION="2.0.0"
DEBUG=False

# ============================================
# Database Configuration (Neon PostgreSQL)
# ============================================
# Connection string for Neon PostgreSQL database
# Format: postgresql://username:password@host/database?sslmode=require
#
# SETUP STEPS:
# 1. Create account at https://console.neon.tech
# 2. Create new project: "Todo Evolution"
# 3. Go to Connection Details â†’ Copy connection string
# 4. Replace the placeholder below with your connection string
#
# IMPORTANT: The connection string contains your credentials!
# Never share this or commit it to version control.
# ============================================
DATABASE_URL="postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/neon?sslmode=require"

# ============================================
# Authentication Configuration
# ============================================
# Generate secure secret key: openssl rand -hex 32
SECRET_KEY="your-secret-key-change-in-production-use-openssl-rand-hex-32"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
# For local development: http://localhost:3000
# For Vercel preview: https://*.vercel.app
# For production: your-custom-domain.com
CORS_ORIGINS=["http://localhost:3000","https://*.vercel.app"]

# ============================================
# Better Auth (Optional)
# ============================================
BETTER_AUTH_ENABLED=false
BETTER_AUTH_SECRET="your-better-auth-secret-key"
BETTER_AUTH_URL="https://todo-backend.onrender.com"

# ============================================
# Logging Configuration
# ============================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
