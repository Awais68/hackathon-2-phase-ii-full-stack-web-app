# Application Configuration
APP_NAME="Todo Evolution API"
APP_VERSION="2.0.0"
DEBUG=False

# Database (Replace with your Neon PostgreSQL connection string)
DATABASE_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/todo_db?sslmode=require"

# Authentication
SECRET_KEY="your-secret-key-change-in-production-use-openssl-rand-hex-32"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated for production)
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# Better Auth
BETTER_AUTH_ENABLED=false
